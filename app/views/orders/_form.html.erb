      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :subtotal %>
    <%= form.number_field :subtotal %>
  </div>

  <div class="field">
    <%= form.label :product_id %>
    <% def products_or
      Product.all.map { |p| [ p.title, p.id ] }
      end%>
    <%= select_tag(:product_id, options_for_select(products_or)) %>  
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
